<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false" bootstrap="src/autoload.php" strict="true" verbose="true" colors="true">
    <testsuites>
        <testsuite name="GDImage">
            <directory suffix="Test.php">./tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src</directory>
            <exclude>
                <directory suffix=".php">./src/autoload.php</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>